<div class="question">
  <div class="question-content">
    <%# Текст вопроса %>
    <div class="question-text text-lead">
      <%= question.text %>
    </div>

    <div class="buffer-bottom">
      <% question.text.to_s.split(' ').each do |word| %>
        <% if word.start_with?('#') %>
          <% word = word.downcase.delete('#') %>
          <%= link_to word, tag_path(word) %>
        <% end %>
      <% end %>
    </div>

    <%# Автор вопроса %>
    <div class="buffer-bottom">
      <% if question.author %>
        <%= link_to "Спрашивает @#{question.author.username}", user_path(question.author)%>
      <% end %>
    </div>

    <%# Текст ответа, если он есть %>
    <% if question.answer.present? && current_user %>
      <div class="question-answer text-lead">
        <%= question.answer %>
      </div>
    <% end %>

    <%# Дата создания вопроса (отформатированная) %>
    <div class="question-date">
      <%= l(question.created_at, format: :short) %>
    </div>
  </div>

  <% if question.user == current_user %>
    <% edit_icon = question.answer.blank? ? 'reply' : 'pencil' %>

    <div class="question-actions">
      <%= link_to fa_icon(edit_icon), edit_question_path(question) %>
      <%= link_to fa_icon('trash-o'), question_path(question),
                  method: :delete, data: {confirm: 'Точно удалить вопрос?'} %>
    </div>
  <% end %>
</div>
